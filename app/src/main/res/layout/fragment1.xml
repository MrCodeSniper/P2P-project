<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout

        android:id="@+id/rl_unlogined"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/homepage_background"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招财猫截止今日"
            android:textColor="#fff"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/user_count"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台用户1人"
            android:textColor="#fff"
            />


        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/user_count"
            android:id="@+id/loan_count"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计出借1元"
            android:textColor="#fff"
            />


        <Button
            android:id="@+id/btn_register"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/loan_count"
            android:text="立即注册"
            android:background="@drawable/button_line"
            android:textColor="#fff"
            android:layout_width="110dp"
            android:layout_height="30dp" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_register"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手领518元"
            android:textColor="#fff"
            />

    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_logined"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/homepage_background"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招财猫截止今日"
            android:textColor="#fff"
            />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/user_charge"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨日收益(元)"
            android:textColor="#fff"
            />


        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/user_charge"
            android:id="@+id/earn_count"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#fff"
            />


        <LinearLayout

            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的猫粮"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="8"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的夺宝币"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="20"/>

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_user_parden"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_width="0dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/redpocket"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <TextView
                android:text="新手乐园"
                android:textColor="#333"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_width="0dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/cat_parden"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <TextView
                android:text="喵乐园"
                android:textColor="#333"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_width="0dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/invite_regard"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <TextView
                android:text="邀请有奖"
                android:textColor="#333"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_safe_proguard"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_width="0dp">

            <ImageView
                android:padding="5dp"
                android:src="@drawable/safe_promise"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <TextView
                android:text="安全保障"
                android:textColor="#333"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


        </LinearLayout>









    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        >
    </View>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:padding="3dp"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:src="@drawable/laba"
            />


        <!--上下滚动的TextView-->
        <com.example.mac.back.view.AutoVerticalScrollTextView
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textview_auto_roll"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        >
    </View>



    <RelativeLayout
        android:id="@+id/page_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:clipChildren="false"
        tools:context=".MainActivity"
        tools:showIn="@layout/activity_main">

        <com.example.mac.back.view.ClipViewPager
            android:id="@+id/vp_homepage"
            android:layout_marginTop="40dp"
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:clipChildren="false"
            android:overScrollMode="always" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="12dp"
            android:id="@+id/icon_safe"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/keyboard_icon"
            />


        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon_safe"
            android:layout_toRightOf="@+id/icon_safe"
            android:background="#fff"
            android:text="招财猫理财全面接入XX银行存管系统"
            android:textColor="#666"
            android:textSize="10sp" />



    </RelativeLayout>


</LinearLayout>