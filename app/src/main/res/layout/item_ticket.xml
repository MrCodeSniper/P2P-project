<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eee"
    android:layout_width="match_parent" android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_user_rate_coupon_able"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_ticketfunc"
                android:textSize="27sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.2%"
                android:textColor="@color/white"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_ticketname"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:text="新手礼包加息券" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:text="满1000元且期限>25天可用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tickettime"
            android:textSize="13sp"
            android:text="2018.04.19-2018.05.04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>