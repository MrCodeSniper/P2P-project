<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        >
    </View>
    <LinearLayout
        android:id="@+id/ll_category"
        android:background="#f7f7f7"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="短期灵活"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"


            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="新手乐园"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"

            />
        <LinearLayout
            android:layout_marginTop="18dp"
            android:id="@+id/ll_rate"
            android:layout_below="@+id/product_category"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv_firstrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0%"
                android:textSize="20sp"
                android:textColor="#ff4242"
                android:layout_marginLeft="20dp"

                />


            <TextView
                android:id="@+id/tv_secondrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5.0%"
                android:textSize="15sp"
                android:textColor="#ff4242"


                />





        </LinearLayout>


        <TextView
            android:id="@+id/tv_peryearrate"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:textColor="#b6b6b6"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_rate"
            android:text="期待年回报率"
            />

        <TextView
            android:id="@+id/tv_out_time"
            android:layout_marginLeft="40dp"
            android:layout_alignBottom="@id/ll_rate"
            android:layout_toRightOf="@+id/ll_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="61天"
            android:textColor="#777"
            android:textSize="17sp"
            />

        <TextView
            android:textSize="10sp"
            android:textColor="#b6b6b6"
            android:layout_alignLeft="@id/tv_out_time"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_out_time"
            android:text="出借期限"
            />


        <TextView
            android:id="@+id/product_action"
            android:layout_alignLeft="@id/iv_phone"
            android:layout_above="@id/iv_phone"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="狂返猫粮"
            android:textColor="#fff"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/sign"
            />


        <ImageView

              android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/pic_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

        <FrameLayout

            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:id="@+id/iv_phone"
            android:layout_width="60dp"

            android:layout_height="70dp"

            >


            <com.dinuscxj.progressbar.CircleProgressBar
                android:layout_gravity="center"
                app:style="solid_line"
                app:progress_stroke_width="1.5dp"
                android:id="@+id/line_progress"
                app:progress_text_color="#ddd"
                app:background_color="#fff"
                android:progress="73"
                app:progress_start_color="#ff4242"
                app:progress_end_color="#ff4242"
                app:progress_background_color="#dddd"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView

                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_loan_rate"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:text="73%"
                android:background="#ffffff"

                android:textColor="#ff4040"
                android:textSize="11sp" />

        </FrameLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        >
    </View>

</LinearLayout>